# Google Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_API_BASE_URL=https://generativelanguage.googleapis.com/v1beta

# NeteaseCloudMusicApi Configuration (必需 - 数据源)
NETEASE_API_HOST=http://localhost:3000
NETEASE_API_TIMEOUT=10000

# QQ Music API Configuration (必需 - 核验源)
QQ_MUSIC_API_HOST=http://localhost:3001
QQ_MUSIC_API_TIMEOUT=10000

# Spotify API Configuration (可选 - 额外核验源)
# SPOTIFY_CLIENT_ID=your_spotify_client_id_here
# SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
# SPOTIFY_AUTH_URL=https://accounts.spotify.com/api/token
# SPOTIFY_API_BASE_URL=https://api.spotify.com/v1

# Dify Configuration (if deploying via API)
DIFY_API_KEY=your_dify_api_key_here
DIFY_API_BASE_URL=https://api.dify.ai/v1

# Redis Configuration (optional, for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/workflow.log

# Retry Configuration
MAX_RETRIES=3
RETRY_INTERVAL_MS=1000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000
