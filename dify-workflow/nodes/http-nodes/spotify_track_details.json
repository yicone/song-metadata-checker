{
  "node_type": "http-request",
  "title": "Spotify 获取曲目详情",
  "description": "获取 Spotify 曲目的完整元数据",
  "config": {
    "method": "GET",
    "url": "{{#env.SPOTIFY_API_BASE_URL#}}/tracks/{{spotify_track_id}}",
    "headers": {
      "Authorization": "Bearer {{spotify_access_token}}",
      "Content-Type": "application/json"
    },
    "timeout": 10000,
    "retry": {
      "enabled": true,
      "max_retries": 2,
      "retry_interval": 1000
    }
  },
  "outputs": [
    {
      "variable": "spotify_track_data",
      "type": "string"
    }
  ],
  "error_handling": {
    "fail_branch": true,
    "on_error": "continue"
  }
}
