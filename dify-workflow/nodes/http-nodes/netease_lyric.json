{
  "node_type": "http-request",
  "title": "网易云音乐 - 获取歌词",
  "description": "从网易云音乐 API 获取歌词",
  "config": {
    "method": "GET",
    "url": "{{#env.NETEASE_API_HOST#}}/lyric",
    "headers": {
      "Content-Type": "application/json"
    },
    "params": {
      "id": "{{song_id}}"
    },
    "timeout": 10000,
    "retry": {
      "enabled": true,
      "max_retries": 3,
      "retry_interval": 1000
    }
  },
  "outputs": [
    {
      "variable": "netease_lyrics_data",
      "type": "string"
    }
  ],
  "error_handling": {
    "fail_branch": true,
    "on_error": "continue"
  }
}
